<div class="container">
    <div class="row">
        <%= month_calendar events: @posts do |date, posts| %>
        <div class="col">
            <div class="day">
                <%= date.day %>
            </div>
            <ul>
                <% posts.each do |post| %>
                <li>
                    <%= link_to post.title, post_path(post) %>
                </li>
                <% end %>
            </ul>
        </div>
        <% end %>
    </div>
</div>